<UserControl x:Class="AcrossTheRoom.MarqueeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
             Name="uc">

    <Canvas Name="MainCanvas" Background="{Binding Path=Background, ElementName=uc}">
        <TextBlock Name="MarqueeTextBlock" 
                   FontSize="{Binding Path=FontSize, ElementName=uc}"></TextBlock>
    </Canvas>
</UserControl>
